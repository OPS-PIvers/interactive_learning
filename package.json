    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "terser": "^5.42.0",
    "typescript": "~5.7.2",
    "undici-types": "^6.20.0",
    "vite": "^6.2.0"
  }
